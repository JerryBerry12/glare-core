<?xml version="1.0" encoding="utf-8"?>
<scenedata>
	<material>
		<name>Triplanar</name>
		<diffuse>
			
			<albedo>
				<shader>
					<param>
						<real>
							<name>scale</name>
							<description></description>
							<min>0</min>
							<max>1000</max>
							<value>10.0</value>
						</real>
					</param>
					<param>
						<real>
							<name>gamma</name>
							<description></description>
							<min>0</min>
							<max>10</max>
							<value>2.2</value>
						</real>
					</param>
					<texture>
						<path>../../testscenes/ColorChecker_sRGB_from_Ref.png</path>
					</texture>
					<shader>
						<![CDATA[def eval(vec3 pos) vec3 :
sample2DTextureVec3(0, vec2(pos.x,pos.y)*paramscale())*pow(abs(normalOS().z), paramgamma())
+
sample2DTextureVec3(0, vec2(pos.x,pos.z)*paramscale())*pow(abs(normalOS().y), paramgamma())
+
sample2DTextureVec3(0, vec2(pos.y,pos.z)*paramscale())*pow(abs(normalOS().x), paramgamma())]]>
					</shader>
				</shader>
			</albedo>
			
		</diffuse>
	</material>
</scenedata>
